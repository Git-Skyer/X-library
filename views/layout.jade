doctype html
html
  head
    title= title
    include headers
  body
    // navigation bar
    nav#nav.navbar.navbar-default.navbar-static-top(role='navigation')
      .container
        .navbar-header
          a.navbar-brand(href='/') <strong id='x'>X</strong>
            a.navbar-brand(href='/') library
        // links in navbar
        ul.nav.navbar-nav
          li 
            a(href='#') Home
          li 
            a(href='/books') All Books

        // search button and search form
        form.navbar-form.navbar-left(role='search')
          .form-group
            .input-group
              .input-group-addon
                .glyphicon.glyphicon-book
              input(type='text', class='form-control', placeholder='Search a book')
          button(type="submit", class='btn btn-default') Submit
    
    // content
    #main-container.container
      block content
    #footer-container.container.row
      footer.page-footer.font-small.grey
      // copyright
      .footer-copyright.text-center @2018 Copyright:  
        a(href='#') X-library
